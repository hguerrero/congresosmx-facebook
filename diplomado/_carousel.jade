.row
  .col-xs-12
    #myCarousel(class='carousel slide' data-ride='carousel')
      ol(class="carousel-indicators")
        each val, index in values
          li(data-target="#myCarousel" data-slide-to=index class=index == 0 ? 'active' : '')
      div(class="carousel-inner" data-role="listbox")
        div(class="item active")
          a(href="acapulco")
            img(src="/images/acapulco/crowne-plaza-acapulco-2.jpg" alt="Crown Plaza Acapulco" class="img-responsive")
        div(class="item")
          a(href="cuba")
            img(src="/images/acapulco/crowne-plaza-acapulco-1.jpg" alt="Crown Plaza Acapulco" class="img-responsive")
        div(class="item")
          a(href="diplomado")
            img(src="/images/acapulco/crowne-plaza-acapulco-4.jpg" alt="Crown Plaza Acapulco" class="img-responsive")
        div(class="item")
          a(href="tailandia")
            img(src="/images/acapulco/crowne-plaza-acapulco-3.jpg" alt="Crown Plaza Acapulco" class="img-responsive")
        div(class="item")
          a(href="tailandia")
            img(src="/images/acapulco/crowne-plaza-acapulco-5.jpg" alt="Crown Plaza Acapulco" class="img-responsive")
      a(class="left carousel-control" href="#myCarousel" data-role="button" data-slide="prev")
        span(class="glyphicon glyphicon-chevron-left" aria-hidden="true")
        //img(src="/images/acapulco/flechaizq.png" class="img-responsive glyphicon-chevron-left" aria-hidden="true")
        span(class="sr-only") Previous
      a(class="right carousel-control" href="#myCarousel" data-role="button" data-slide="next")
